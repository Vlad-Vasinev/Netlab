      .stories-item(data-video-src='http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerBlazes.mp4' data-img-src='img/projectSliderImg.png')
        .img.stories-item-preview
          img(src='img/projectSliderImg.png')
