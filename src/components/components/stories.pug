          .slider-navigation-prev.slide-button.slide-button_horizontal
            span 
              svg(width='41' height='26' viewBox='0 0 41 26' fill='none' xmlns='http://www.w3.org/2000/svg')
                path(d='M41 13L2 13M2 13L14.1875 0.999998M2 13L14.1875 25' stroke='white' stroke-width='1.5')
        .slider-navigation__next
          .slider-navigation-next.slide-button.slide-button_horizontal
            span 
              svg(width='41' height='26' viewBox='0 0 41 26' fill='none' xmlns='http://www.w3.org/2000/svg')
                path(d='M41 13L2 13M2 13L14.1875 0.999998M2 13L14.1875 25' stroke='white' stroke-width='1.5')
      .pagination-container
    .close-btn
      svg(xmlns='http://www.w3.org/2000/svg' width='32' height='32' fill='none' viewBox='0 0 32 32')
